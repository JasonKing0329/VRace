<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg">

        <com.king.app.jactionbar.JActionbar
            android:id="@+id/actionbar"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/actionbar_bg"
            app:actionTextColor="@color/action_icon_color"
            app:iconColor="@color/action_icon_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maxShowIcon="4"
            app:showIconBack="true"
            app:title="Special"
            app:titleColor="@color/action_title_color" />

        <LinearLayout
            android:id="@+id/ll_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_uturn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_uturn"/>
                <ImageView
                    android:id="@+id/iv_speed_bump"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_speed_bump"/>
                <ImageView
                    android:id="@+id/iv_ff"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_ff"/>
                <ImageView
                    android:id="@+id/iv_specify"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_specify"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_ep"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginLeft="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_ep"/>
                <ImageView
                    android:id="@+id/iv_safe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginLeft="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_safe"/>
                <ImageView
                    android:id="@+id/iv_ff_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_ff_card"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_intersection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_intersection"/>
                <ImageView
                    android:id="@+id/iv_easter_egg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/sp_easter_egg"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>