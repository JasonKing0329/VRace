<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Index"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_index"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_title_index"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:entries="@array/leg_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Player Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_index" />

        <EditText
            android:id="@+id/et_players"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toEndOf="@+id/tv_title_player"
            app:layout_constraintTop_toBottomOf="@+id/et_index" />

        <TextView
            android:id="@+id/tv_title_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Places"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_player" />

        <ImageView
            android:id="@+id/iv_add_place"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@+id/tv_title_place"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_player"
            app:srcCompat="@drawable/ic_add_ff4081_24dp" />

        <LinearLayout
            android:id="@+id/ll_place1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_place">
            <EditText
                android:id="@+id/et_country1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Country"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_city1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="City"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/iv_remove1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:visibility="invisible"
                android:src="@drawable/ic_remove_ff4081_24dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_place2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_place1">
            <EditText
                android:id="@+id/et_country2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Country"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_city2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="City"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/iv_remove2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_remove_ff4081_24dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_place3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_place2">
            <EditText
                android:id="@+id/et_country3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Country"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_city3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="City"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/iv_remove3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_remove_ff4081_24dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_desc"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@drawable/shape_input_round_bg"
            android:hint="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_place3" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/ok"
            style="@style/TvDialogConfirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_desc" />

    </android.support.constraint.ConstraintLayout>
</layout>